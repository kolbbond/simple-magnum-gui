{
    "version": 2,
    "configurePresets": [
        {
            "name": "vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "x64-linux-local",
            "inherits": "vcpkg",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux-local",
                "VCPKG_INSTALLED_DIR": "$env{HOME}/.local/vcpkg/"
            }
        },
        {
            "name": "x64-windows-local",
            "inherits": "vcpkg",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-local",
                "VCPKG_INSTALLED_DIR": "$env{HOME}/.local/vcpkg/"
            }
        }
    ]
}

